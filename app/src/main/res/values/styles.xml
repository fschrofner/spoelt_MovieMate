<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="HeaderBold">
        <item name="android:fontFamily">@font/sf_pro_heavy</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="HeaderNormal">
        <item name="android:fontFamily">@font/sf_pro_regular</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="SubheaderNormal">
        <item name="android:fontFamily">@font/sf_pro_regular</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="SubheaderBold">
        <item name="android:fontFamily">@font/sf_pro_heavy</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="CircleImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="BodySmall">
        <item name="android:fontFamily">@font/sf_pro_regular</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black</item>
    </style>
</resources>